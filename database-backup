# ARG_OPTIONAL_SINGLE([port],[P],[Database port],[3306])
# ARG_OPTIONAL_SINGLE([output-directory],[o],[Output directory],[/tmp])
# ARG_OPTIONAL_BOOLEAN([compress],[c],[Directly compress (gzip) output])
# ARG_OPTIONAL_BOOLEAN([quiet],[q],[Directly gzip output])
# ARG_OPTIONAL_REPEATED([ignore],[i],[Ignore table in export],['information_schema' 'innodb' 'performance_schema' 'tmp' 'mysql' 'sys'])
# ARG_HELP([database-backup])
